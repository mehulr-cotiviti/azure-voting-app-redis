pipeline {
    agent any 
    stages {
        stage("Verify Branch") {
           steps { 
               echo "${GIT_BRANCH}" 
               }
        }
        stage("Docker build") {
            steps {
                sh (script: 'echo $PATH')
                sh(script: "docker image ls ")

                sh(script: """
                   cd azure-vote/
                   docker build -t azure-vote-jenkins . 
                   docker image ls | head 
                   cd ..
                """)
            }
        }
    }
}